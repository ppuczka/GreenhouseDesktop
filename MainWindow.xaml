<Window x:Class="GreenhouseDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Greenhouse Controller" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top right connection status and connect button -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,40,30,354" Grid.RowSpan="2">
            <TextBlock Text="Connection Status:" Margin="0,0,5,0"/>
            <TextBlock x:Name="ConnectionStatus" Text="Disconnected" Foreground="Red" Margin="0,0,10,0"/>
            <Button x:Name="ConnectButton" Content="Connect" Width="80" Height="34" Click="ConnectButton_Click"/>
        </StackPanel>

        <!-- Main content -->
        <StackPanel Grid.Row="1" Margin="10,50,30,-10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="StartButton" Content="Start Controller" Width="120" Height="30" Margin="0,0,10,0" Click="StartButton_Click"/>
                <Button x:Name="StopButton" Content="Stop Controller" Width="120" Height="30" Click="StopButton_Click"/>
            </StackPanel>
            <TextBlock Text="Alert Messages:" Margin="0,0,0,10"/>
            <ListBox x:Name="AlertsList" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
