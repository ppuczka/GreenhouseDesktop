<Window x:Class="GreenhouseDesktopApp.Components.ConnectionStringDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Connection String" Height="180" Width="600" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Paste your connection string:"/>
        <TextBox x:Name="ConnectionStringBox" Grid.Row="1" Margin="0,10,0,10" AcceptsReturn="True" Height="50"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <!--<Button Content="OK" Width="70" Margin="0,0,10,0" IsDefault="True" Click="OkButton_Click"/>-->
            <Button Content="Cancel" Width="70" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
