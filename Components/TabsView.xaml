<UserControl x:Class="GreenhouseDesktopApp.Components.TabsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="30" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Tab 1" Command="{Binding Tab1Command}" HorizontalAlignment="Stretch" />
        <Button Grid.Column="1" Content="Tab 2" Command="{Binding Tab2Command}" HorizontalAlignment="Stretch" />
        <Button Grid.Column="2" Content="Tab 3" Command="{Binding Tab3Command}" HorizontalAlignment="Stretch" />
        <Button Grid.Column="3" Content="Tab 4" Command="{Binding Tab4Command}" HorizontalAlignment="Stretch" />
    </Grid>
</UserControl>
