<UserControl x:Class="GreenhouseDesktopApp.Components.AppSettingsListing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GreenhouseDesktopApp.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <StackPanel>
                <TextBlock Text="App Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="SettingsListBox">
                    <ListBoxItem Content="Setting 1"/>
                    <ListBoxItem Content="Setting 2"/>
                    <ListBoxItem Content="Setting 3"/>
                    <ListBoxItem Content="Setting 4"/>
                </ListBox>
            </StackPanel>
    </Grid>
</UserControl>
